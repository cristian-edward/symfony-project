{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="login-form">
    <h1>Cofetaria IOANA</h1>
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <div class="form-group ">
            {#<label for="username">{{ 'security.login.username'|trans }}</label>#}
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"  class="form-control" autocomplete="off" />
            <i class="fa fa-user"></i>
        </div>
        <div class="form-group ">
            {#<label for="password">{{ 'security.login.password'|trans }}</label>#}
            <input type="password" id="password" name="_password" required="required"  class="form-control" />
            <i class="fa fa-lock"></i>
        </div>

        <div class="form-group ">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>
        <span class="alert">Invalid Credentials</span>
        <a class="link" href="#">Lost your password?</a>
        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"  class="log-btn" />
    </form>
</div>



